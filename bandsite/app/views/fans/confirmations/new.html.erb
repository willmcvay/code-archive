<div class="header-text">
  <ul>
    <li><h2>My Treasure Chest</h2></li>
    <li><h4>...Come inside!</h4></li>
  </ul>
</div>

<div class="container">
  <div class="span9">
    <div class="container-treasure">
      <div class="sign-up">
        <h3>Resend Confirmation Instructions</h3>
          <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
            <%= devise_error_messages! %>
            <h4><%= f.email_field :email, :autofocus => true, :placeholder => "Enter the email you used to sign up with - hit return to submit" %><br><br></h4>
          <% end %>

          <%= render "fans/shared/links" %>
      </div>
    </div>
  </div>
  <div class="span3">
    <%= render 'layouts/menu' %>
  </div>
</div>