{
  "name": "react-redux-boilerplate",
  "version": "1.0.0",
  "description": "React Redux Simple Boilerplate",
  "author": "Will McVay",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist; webpack-cli --config *.prod.js",
    "dev": "webpack-serve --port 8000 --config *.dev.js & yarn server",
    "server": "node server/server.js",
    "lint": "chmod +x ./prettier.sh && ./prettier.sh && eslint src --fix",
    "prettier": "prettier --write './src/**/*.js'",
    "test": "mocha tests/** --require tests/setup.js --compilers js:@babel/register",
    "test-dev": "mocha tests/** --require tests/setup.js --compilers js:@babel/register --watch",
    "validate": "npm ls"
  },
  "dependencies": {
    "history": "^4.7.2",
    "httpdispatcher": "2.1.2",
    "muicss": "^0.9.39",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.1.3",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-first-router": "^0.0.16-next",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.46",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-flow": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "@babel/register": "^7.0.0-beta.46",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.0.0-beta.2",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "connect-history-api-fallback": "^1.5.0",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.8.1",
    "eslint-plugin-standard": "^3.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^11.10.0",
    "koa-connect": "^2.0.1",
    "mocha": "^5.1.1",
    "mocha-snapshots": "^4.1.0",
    "node-sass": "^4.9.0",
    "precommit-hook": "^3.0.0",
    "sass-loader": "^7.0.1",
    "sinon": "^5.0.7",
    "style-loader": "^0.21.0",
    "webpack": "^4.8.2",
    "webpack-cli": "^2.1.3",
    "webpack-serve": "^0.3.2"
  },
  "pre-commit": [
    "lint"
  ]
}
