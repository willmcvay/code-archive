{
  "name": "is-the-cricket-on",
  "version": "1.0.0",
  "description": "An application for cricket fans",
  "repository": "https://github.com/willmcvay/isTheCricketOn",
  "scripts": {
    "deploy": "npm run build && npm run sass && npm test && npm run server",
    "build": "npm run yarn && npm run clean && node ./scripts/prodBundler.js",
    "server": "node ./scripts/server.js",
    "test": "jest",
    "clean": "node ./scripts/clean.js",
    "yarn": "yarn install -g && yarn",
    "start": "npm run clean && node ./scripts/devBundler.js && concurrently \"node ./scripts/hotReload.js\" \"nodemon ./scripts/server.js --watch public -e js\" \"npm run sass-watch\" --kill-others",
    "lint": "tslint './**/*.ts{,x}'",
    "sass": "node-sass sass/style.sass -o public",
    "sass-watch": "npm run sass && node-sass sass/style.sass -wo public"
  },
  "author": "Will McVay",
  "license": "MIT",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.13.3",
    "history": "^4.4.0",
    "mongodb": "^2.0.49",
    "mongoose": "^4.2.8",
    "node-fetch": "^1.6.3",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.0.1",
    "react-router-redux": "^4.0.7",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "socket.io": "^1.3.7",
    "styled-components": "^1.4.4"
  },
  "devDependencies": {
    "@types/enzyme": "^2.7.7",
    "@types/express": "^4.0.35",
    "@types/express-serve-static-core": "^4.0.44",
    "@types/history": "^4.5.0",
    "@types/jest": "^19.2.2",
    "@types/mime": "0.0.29",
    "@types/mongodb": "^2.1.41",
    "@types/mongoose": "^4.7.9",
    "@types/node": "^7.0.12",
    "@types/node-fetch": "1.6.7",
    "@types/react": "^15.0.21",
    "@types/react-dom": "^0.14.23",
    "@types/react-redux": "^4.4.38",
    "@types/react-router": "^2.0.1",
    "@types/react-router-redux": "^4.0.44",
    "@types/serve-static": "^1.7.31",
    "@types/socket.io": "^1.4.29",
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "concurrently": "^3.1.0",
    "del": "^2.2.2",
    "enzyme": "~2.7.1",
    "enzyme-to-json": "^1.5.0",
    "file-loader": "^0.9.0",
    "fuse-box": "^1.3.130",
    "jest": "^18.1.0",
    "node-sass": "^3.13.0",
    "nodemon": "^1.8.1",
    "pre-commit": "^1.2.2",
    "progress-bar-webpack-plugin": "~1.9.0",
    "react-hot-loader": "^1.3.1",
    "redux-devtools": "^3.3.1",
    "ts-jest": "^18.0.3",
    "tslint": "^4.0.1",
    "typescript": "^2.2.2",
    "webpack": "~1.13.2"
  }
}
