{
  "name": "is-the-cricket-on",
  "version": "1.0.0",
  "description": "An application for cricket fans",
  "repository": "https://github.com/willmcvay/isTheCricketOn",
  "scripts": {
    "deploy": "npm run build && npm run server",
    "build": "npm run clean && node ./scripts/prodBundler.js",
    "server": "node ./scripts/server.js",
    "test": "jest — coverage — no-cache ${1}",
    "test-watch": "jest ${1} — watch",
    "clean": "node ./scripts/clean.js",
    "install-utils": "typings install && yarn install -g && yarn install",
    "start": "npm run clean && node ./scripts/devBundler.js && concurrently \"node ./scripts/hotReload.js\" \"nodemon ./scripts/server.js --watch public -e js\" --kill-others",
    "lint": "tslint './**/*.ts{,x}'"
  },
  "author": "Will McVay",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "lib/.*\\.spec.(ts|js)$",
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "globals": {
      "__TS_CONFIG__": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node"
      }
    }
  },
  "dependencies": {
    "axios": "^0.15.2",
    "compression": "^1.6.2",
    "express": "^4.13.3",
    "history": "^4.4.0",
    "mongodb": "^2.0.49",
    "mongoose": "^4.2.8",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.0.1",
    "react-router-redux": "^4.0.7",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "socket.io": "^1.3.7"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.0.0-beta.18",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "del": "^2.2.2",
    "enzyme": "~2.6.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "fs": "0.0.1-security",
    "jasmine-core": "^2.5.2",
    "jest": "^18.1.0",
    "node-sass": "^3.13.0",
    "nodemon": "^1.8.1",
    "progress-bar-webpack-plugin": "~1.9.0",
    "react-hot-loader": "^1.3.1",
    "redux-devtools": "^3.3.1",
    "redux-logger": "^2.7.4",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "ts-jest": "^18.0.1",
    "tslint": "^4.0.1",
    "typescript": "^2.1.0",
    "typings": "^2.1.0",
    "webpack": "~1.13.2",
    "webpack-dev-server": "~1.16.2"
  }
}
