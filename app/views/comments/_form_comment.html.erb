<%= form_for(@comment) do |f| %>
<div class="field">
  <ul><%= f.label :djname %><%= f.text_field :djname %></ul>
  <ul><%= f.label :comment %><%= f.text_field :comment %></ul>
  <%= f.hidden_field :artist_id, value: @artist.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
<% end %>