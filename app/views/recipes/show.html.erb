<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @recipe.name %>
</p>

<p>
  <b>Steps:</b>
  <%= @recipe.steps %>
</p>

<p>
  <b>Cuisine:</b>
  <%= @recipe.cuisine %>
</p>

<p>
  <b>Image:</b>
  <%= @recipe.image %>
</p>

<p>
  <b>Ingredients:</b>
  <% @recipe.ingredients.each do |ingredient| %>
  <%= ingredient.name %>
  <% end %>
</p>

