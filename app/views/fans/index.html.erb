<div class="header-text">
  <h2>Welcome to the Treasure Chest</h2>
</div>
<div class="container">
  <div class="span9">
      <div class="span5">
        <h4>Drop me a message in the box below: </h4>
          <%= form_for [ current_fan, @comment ],  :remote => true do |f| %>
          <%= f.hidden_field :fan_id, value: current_fan.id %>
            <p class="blog-footer"><%= f.text_field :content, :placeholder => "Leave your message here - hit return to submit" %></p>
            <div class="invisiblebtn"><%= f.submit %></div>

            <% end %>
            <div id="fan_comments"><% @comments.each do |comment| %>
                <p><%= comment.content %></p>
              <% end %> </div>  
      </div>
          
      <div class="span4">
        <h4>Claim Your Free Download(s) Here:</h4>


          <% @documents.each do |document| %>

            <% unless document.live.nil? %><p><%= link_to "Download", document.attachment.url %></p>
            <% end %>
          <% end %>

        <% current_fan.documents.each do |document| %>

          <p><%= link_to "Download", document.attachment.url %></p>
        <% end %>
      </div>
      
    </div>

  <div class="span3">
    <%= render 'layouts/menu' %>
  </div>
</div>