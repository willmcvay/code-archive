  <div class="header-text">
  <h2>Captain's Blog</h2>
  </div>
    <div class="container">        
      <div class="span9">
          <div class="container-blog">
            <% @posts.each do |post| %>
              <h2><%= post.title %></h2>
                <p><%= image_tag post.photo %></p>
                <p><%= post.created_at %></p>
                <p><%= post.content %></p>
              <% end %>
              <%= paginate @posts, :theme => 'twitter-bootstrap' %>
          </div>
        </div>
          <div class="span3">
            <%= render 'layouts/menu' %>
          </div>
  </div>