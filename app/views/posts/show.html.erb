<div class="header-text">
  <h2>Captain's Blog</h2>
</div>
  <div class="container">        
    <div class="span9">
      <div class="container-blog-post">
          <h2><%= @post.title %></h2>
            <p><%= image_tag @post.photo %></p>
            <p><%= @post.created_at.strftime("%d-%m-%y") %></p>
            <p><%= @post.content %></p>
            <p class="backpage"><script>document.write('<a href="' + document.referrer + '">Back To Blog</a>')</script></p>
            <h4>Comments (be nice!)</h4>
            <div id='post_comments'>
              <% @post.comments.each do |comment| %>
                <p><%= comment.content %></p>
              <% end %>             
            </div>
            <%= form_for [ @post, @comment ],  :remote => true do |f| %>
              <%= f.hidden_field :post_id, value: @post.id %>
            <p class="blog-footer"><%= f.text_field :content, :placeholder => "Leave your comment here - hit return to submit" %><%= f.submit %></p>
            <% end %>
            <%=render 'layouts/social' %>
      </div>    
  </div>

    <div class="span3">
      <%= render 'layouts/menu' %>
    </div>
  </div>             
<br>
