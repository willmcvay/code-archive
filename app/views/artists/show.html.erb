<h1>Artists#show</h1>
<p>Find me in app/views/artists/show.html.erb</p>

<% @artist.comments.each do |comment| %>
  <li><%= comment.comment %> by <%= comment.djname %></li>
<% end %>

<%= form_for @comment do |f| %>
  <%= f.label :djname %>
  <%= f.text_field :djname %>
  <%= f.label :comment %>
  <%= f.text_area :comment %>
  <%= f.hidden_field :artist_id, value: @artist.id %>
  <%= f.submit %>
<% end %>